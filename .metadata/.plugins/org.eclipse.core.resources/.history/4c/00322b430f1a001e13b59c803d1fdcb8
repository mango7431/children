<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="test.com.idle">
	
	<select id="R_SELECT_ALL" resultType="test.com.idle.vo.RoomVO">
		select distinct r.*, m.member_savename
		from room r left join member m
		on r.buyer = m.id or r.seller = m.id
		where r.buyer = #{buyer} or r.seller = #{seller}
		order by r.room_num desc
	</select>
	
	<select id="R_SELECT_ONE" resultType="test.com.idle.vo.RoomVO">
		select * from room where room_num=#{room_num}
	</select>
	
</mapper>