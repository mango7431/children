<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="test.com.admin.vo">
  	<select id="N_SELECT_ALL" resultType="test.com.admin.vo.NoticeVO">
  		select * from notice order by notice_num desc
  	</select>
  	
  	<select id="N_SELECT_ONE" resultType="test.com.admin.vo.NoticeVO">
  		select * from notice where notice_num = #{notice_num}
  	</select>
  	
  	<select id="N_SEARCH_LIST_NOTICE_TITLE" resultType="test.com.admin.vo.NoticeVO">
		select * from notice where notice_title like #{searchWord}
	</select>
	
  	<select id="N_SEARCH_LIST_NOTICE_CONTENT" resultType="test.com.admin.vo.NoticeVO">
		select * from notice where notice_content like #{searchWord}
	</select>
	  	
  	<insert id="N_INSERT" parameterType="test.com.admin.vo.NoticeVO">
  		insert into notice(notice_num,notice_title,notice_content)
  		values(seq_notice.nextval,#{notice_title},#{notice_content})
  	</insert>
  	
  	<update id="N_UPDATE" parameterType="test.com.admin.vo.NoticeVO">
		update notice set notice_title=#{notice_title}, notice_content=#{notice_content},
		notice_date=sysdate
		where notice_num = #{notice_num}  	
  	</update>
  	
  	<delete id="N_DELETE">
  		delete from notice where notice_num = #{notice_num}
  	</delete>
  
  </mapper>